<body class="bg-light">
<div class="container">
    <div class="col-md-12">
        <form class="needs-validation" novalidate method="POST" action="registration-submit">
            <div class="my-3">
                <div>Ar turite siuntimą kataraktos konsultacijai?</div>
                <div class="form-check">
                    <input id="yes" name="permit" type="radio" class="form-check-input" required>
                    <label class ="form-check-label" for="yes">Taip</label>
                </div>
                <div class="form-check">
                    <input id="no" name="permit" type="radio" class="form-check-input" required>
                    <label class ="form-check-label" for="no">Ne</label>
                </div> 
            </div>
            <div class="row g-3">
                <div class="col-md-6">
                    <label for="filialas" class="form-label">Filialas</label>
                    <select class="form-select" name="branch" id="branch" required>
                        <option value>Pasirinkti...</option>
                        <option>Vilnius</option>
                        <option>Kaunas</option>
                        <option>Alytus</option>
                        <option>Klaipėda</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="dtpicker" class="col-sm-6 control-label">Pasirinkite datą ir laiką:</label>
                    <div class='col-sm-6 input-group date ' id='dtpicker'>
                        <input type='datetime-local' name="datetime" class="form-control inputstl" />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="row g-3">
                <div class="col-sm-6">
                    <label for="firstName" class="form-label">Vardas</label>
                    <input type="text" class="form-control" name="firstName" id="firstName" placeholder value required>
                    <div class="invalid-feedback">Vardas būtinas.</div>
                </div>
                <div class="col-sm-6">
                    <label for="lastName" class="form-label">Pavardė</label>
                    <input type="text" class="form-control" name="lastName" id="lastName" placeholder value required>
                    <div class="invalid-feedback">Pavardė būtina.</div>
                </div>
                <div class="col-12">
                    <label for="email" class="form-label">El. paštas</label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="you@example.com" required>
                    <div class="invalid-feedback">Prašom įvesti savo el. paštą.</div>
                </div>
                <div class="col-sm-6">
                    <label for="phone" class="form-label">Telefonas</label>
                    <input type="text" class="form-control" name="phone" id="phone" required>
                    <div class="invalid-feedback">Prašom įvesti savo telefono numerį.</div>
                </div>
                <div class="col-sm-6">
                    <label for="age" class="form-label">Amžius</label>
                    <input type="number" class="form-control" name="age" id="age">
                </div>
                <div class="col-12">
                    <label for="symptoms">Kuo skundžiatės?</label>
                    <textarea class="form-control rounded-0" name="symptoms" id="symptoms" rows="6"></textarea>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="privacy" id="privacy" required>
                    <label class="form-check-label" for="privacy">Sutinku su privatumo politika.</label>                    
                </div>
            </div>
            <button class="btn btn-primary btn-lg" type="submit">Registruotis</button>
        </form>
    </div>
</div>

</body>